@{
    ViewData["Title"] = "Course Details";
    Layout="~/Views/Shared/_Layout.cshtml";

}
@model CourseViewModel

<div class="container">
    <h2 class="mb-4">@Model.CourseName</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Course Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Instructor:</dt>
                <dd class="col-sm-9">@Model.InstructorName</dd>

                <dt class="col-sm-3">Category:</dt>
                <dd class="col-sm-9">@Model.CategoryName</dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Price:</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Hours:</dt>
                <dd class="col-sm-9">@Model.Hours</dd>

                <dt class="col-sm-3">Students Enrolled:</dt>
                <dd class="col-sm-9">@Model.NumberOfStudents</dd>

                <dt class="col-sm-3">Average Evaluation:</dt>
                <dd class="col-sm-9">@Model.Evaluation.ToString("0.0") / 5</dd>
            </dl>
        </div>
    </div>

    @if (Model.Students != null && Model.Students.Any())
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Enrolled Students</h5>
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var student in Model.Students)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@student.Name</strong>
                        </div>
                        <span class="text-muted">@student.Email</span>
                    </li>
                }
            </ul>
        </div>
    }

    @if (Model.feedback.Any())
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Student Feedback</h5>
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var comment in Model.feedback)
                {
                    <li class="list-group-item">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-comment text-muted me-2"></i>
                            <span>@comment</span>
                        </div>
                    </li>
                }
            </ul>
        </div>
    }

    <a asp-action="Index" class="btn btn-secondary mt-2">Back to Courses</a>
</div>
